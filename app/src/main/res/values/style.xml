<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- TextView -->
    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#F4F4F4</item>
    </style>

    <style name="Text.Subtitle">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Button -->
    <style name="PuzzleButton">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@raw/lilit</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:background">@drawable/stone</item>
    </style>


    <style name="Step">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:text">step</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#C1C8B652</item>
    </style>

    <style name="button">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="alertDialog">
        <item name="android:width">500dp</item>
        <item name="android:height">500dp</item>
    </style>
</resources>